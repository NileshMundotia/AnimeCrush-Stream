<%- include('partials/header', { cssFile: '/CSS/anime.css' }) %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= animeTitle %> | AnimeCrush</title>
  <link rel="stylesheet" href="<%= cssFile %>" />
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: radial-gradient(circle at top, #0a0a0a, #000);
      color: #fff;
      font-family: "Poppins", sans-serif;
      min-height: 100vh;
      overflow-x: hidden;
      padding: 20px;
    }

    h2 {
      text-align: center;
      font-size: 1.8em;
      margin-bottom: 20px;
      color: #3aabc4;
      letter-spacing: 1px;
    }

    video {
      width: 80%;
      max-width: 900px;
      border-radius: 20px;
      border-top: 2px solid rgba(255, 255, 255, 0.2);
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
      transition: transform 0.3s ease;
    }

    video:hover {
      transform: scale(1.02);
    }

    .back-btn {
      margin-top: 30px;
      padding: 12px 25px;
      background: rgba(41, 218, 64, 0.6);
      border-top: 2px solid rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .back-btn:hover {
      background-color: #ffaa00;
      transform: scale(1.05);
    }
  </style>
</head>

<body>
  <h2>ðŸŽ¬ Now Playing: <%= animeTitle %></h2>

  <video id="videoPlayer" controls autoplay></video>

  <button class="back-btn" onclick="window.location.href='/'">â¬… Back to Home</button>

  <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
  <script>
    const video = document.getElementById("videoPlayer");
    const videoSrc = "<%= videoPath %>";

    if (Hls.isSupported()) {
      const hls = new Hls();
      hls.loadSource(videoSrc);
      hls.attachMedia(video);
      hls.on(Hls.Events.MANIFEST_PARSED, () => {
        video.play();
      });
    } else if (video.canPlayType("application/vnd.apple.mpegurl")) {
      video.src = videoSrc;
      video.addEventListener("loadedmetadata", () => {
        video.play();
      });
    } else {
      alert("Your browser does not support HLS playback.");
    }
  </script>
</body>
</html>

<%- include('partials/footer') %>
